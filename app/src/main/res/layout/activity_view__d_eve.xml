<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_DEve"
    android:id="@+id/activity_view_d_events"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lab_for_bt_picker_view"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:typeface="normal"
        android:padding="10dp"
        android:text="Click the below button to select the location of disaster"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_picker_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Pick Location"
        android:layout_below="@id/lab_for_bt_picker_view"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bt_picker_view"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_dis_events"
            android:padding="10dp"
            />

    </ScrollView>


</RelativeLayout>